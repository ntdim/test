<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:context="http://www.springframework.org/schema/context"
       xmlns:gui="http://schemas.haulmont.com/cuba/spring/cuba-gui.xsd"
       xmlns="http://www.springframework.org/schema/beans">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.untitled"/>

    <gui:screens base-packages="com.company.untitled.web"/>
    <bean id="untitled_proxyCreator" class="com.haulmont.cuba.web.sys.remoting.WebRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="untitled_ProductService" value="com.company.untitled.core.service.ProductService"/>
            </map>
        </property>
    </bean>

</beans>